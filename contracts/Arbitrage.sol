contract Arbitrage is Ownable {
    address wEthAddress = 0xB31f66AA3C1e785363F0875A1B74E27b85FD66c7;

    // string private greeting;

    // constructor(string memory _greeting) {
    //     console.log("Deploying a Greeter with greeting:", _greeting);
    //     greeting = _greeting;
    // }

    function executeTrade(
        IJoeRouter01 router,
        uint256 amountIn,
        uint256 amountOutMin,
        address[] calldata path
    ) external {
        require(msg.sender == owner(), "Only owner");
        uint256[] memory amounts = router.swapExactTokensForTokens(
            amountIn,
            amountOutMin,
            path,
            address(this),
            block.timestamp + 100
        );
        require(amounts[amounts.length - 1] >= amountIn, "No profit made");
    }

    function withdraw(uint256 amount) external {
        require(msg.sender == owner(), "Only owner");
        WrappedEth(wEthAddress).transfer(msg.sender, amount);
    }

    function approveRouter(address router) external onlyOwner {
        WrappedEth(wEthAddress).approve(router, type(uint256).max);
    }

    function simulateSwap(
        IJoeRouter01 router,
        uint256 amountIn,
        address[] memory path
    ) external view returns (uint256[] memory amounts) {
        return router.getAmountsOut(amountIn, path);
    }
}
